<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/squared_border_white_layout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/security_text_hint"
        android:textColorHint="@color/colorThemeLighter"
        android:textColor="@color/colorThemeDarker"
        android:inputType="textPassword"
        android:id="@+id/dialog_save_editText"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorThemeDarker"
        android:layout_below="@+id/dialog_save_editText"
        android:layout_marginTop="4dp"
        android:id="@+id/editText_line"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/security_dialog_ok"
        android:textColor="@color/colorThemeDarker"
        android:layout_below="@+id/editText_line"
        android:layout_alignParentStart="true"
        android:id="@+id/dialog_save_button"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_border_white_layout"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/security_dialog_cancel"
        android:textColor="@color/secondaryColor"
        android:layout_below="@+id/editText_line"
        android:layout_alignParentEnd="true"
        android:id="@+id/dialog_save_cancel_button"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:background="@drawable/curved_border_orange_layout"/>

</RelativeLayout>
